<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Shopversecustomerapp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/red_200</item>
        <item name="colorSecondaryVariant">@color/red_900</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Làm trong suốt status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Cho phép vẽ ra vùng notch -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- Không dùng translucent cũ -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
</resources>

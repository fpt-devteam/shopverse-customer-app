<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_500"
    android:fillViewport="true"
    tools:context=".ui.account.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:contentDescription="Search" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/search_placeholder"
                    android:textColor="#9E9E9E"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Main Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Not Logged In Section -->
                <LinearLayout
                    android:id="@+id/layoutNotLoggedIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- Mascot Image -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/shopverse_logo"
                        android:contentDescription="Shopverse Mascot"
                        android:layout_marginBottom="16dp" />

                    <!-- Welcome Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/welcome_message"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp" />

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/become_member_message"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="24dp" />

                    <!-- Login and Register Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <Button
                            android:id="@+id/btnLogin"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="@string/login"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:backgroundTint="@color/red_700"
                            android:layout_marginEnd="8dp"
                            app:cornerRadius="8dp" />

                        <Button
                            android:id="@+id/btnRegister"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="@string/register"
                            android:textColor="@color/red_700"
                            android:textStyle="bold"
                            android:backgroundTint="@color/white"
                            android:layout_marginStart="8dp"
                            style="?attr/materialButtonOutlinedStyle"
                            app:strokeColor="@color/red_700"
                            app:strokeWidth="2dp"
                            app:cornerRadius="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Logged In Section -->
                <LinearLayout
                    android:id="@+id/layoutLoggedIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- User Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/shopverse_logo"
                            android:contentDescription="User Avatar" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvUserEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="user@example.com"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thành viên Shopverse"
                                android:textSize="14sp"
                                android:textColor="#757575"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Logout Button - Right after user info -->
                    <Button
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="@string/logout"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:backgroundTint="@color/red_700"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        app:cornerRadius="8dp" />
                </LinearLayout>

                <!-- Feature Icons Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Membership Icon -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_view"
                            android:contentDescription="Membership" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/membership_benefits"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- Discount Icon -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:contentDescription="Discount" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/discount"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- Purchase History Icon -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_agenda"
                            android:contentDescription="Purchase History" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/purchase_history"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <!-- S-Student Icon -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@android:drawable/ic_menu_info_details"
                            android:contentDescription="S-Student" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/s_student"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- History Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history_section"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- Purchase History Menu Item -->
                <LinearLayout
                    android:id="@+id/menuPurchaseHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_agenda"
                        android:contentDescription="Purchase History" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/purchase_history"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="12dp"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:rotation="270"
                        android:contentDescription="Navigate" />
                </LinearLayout>

                <!-- Benefits Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/benefits_section"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />


                <!-- S-Edu Menu Item -->
                <LinearLayout
                    android:id="@+id/menuSEdu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_info_details"
                        android:contentDescription="S-Edu" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/s_edu"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="12dp"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:rotation="270"
                        android:contentDescription="Navigate" />
                </LinearLayout>

                <!-- Discount Menu Item -->
                <LinearLayout
                    android:id="@+id/menuDiscount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:contentDescription="Discount" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/discount"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="12dp"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:rotation="270"
                        android:contentDescription="Navigate" />
                </LinearLayout>

                <!-- Account Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_section"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <!-- Personal Info Menu Item -->
                <LinearLayout
                    android:id="@+id/menuPersonalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_account_black_24dp"
                        android:contentDescription="Personal Info" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/personal_info"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="12dp"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:rotation="270"
                        android:contentDescription="Navigate" />
                </LinearLayout>

                <!-- Address Menu Item -->
                <LinearLayout
                    android:id="@+id/menuAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_map"
                        android:contentDescription="Address" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/address"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="12dp"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:rotation="270"
                        android:contentDescription="Navigate" />
                </LinearLayout>

                <!-- Linked Accounts Menu Item -->
                <LinearLayout
                    android:id="@+id/menuLinkedAccounts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_share"
                        android:contentDescription="Linked Accounts" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/linked_accounts"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="12dp"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:rotation="270"
                        android:contentDescription="Navigate" />
                </LinearLayout>

                <!-- Change Password Menu Item -->
                <LinearLayout
                    android:id="@+id/menuChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_lock_lock"
                        android:contentDescription="Change Password" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/change_password"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="12dp"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_more"
                        android:rotation="270"
                        android:contentDescription="Navigate" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="300dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <!-- Store Name -->
        <TextView
            android:id="@+id/txt_store_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="@string/no_store_selected"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Store Address -->
        <TextView
            android:id="@+id/txt_store_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <!-- Store Hours -->
        <TextView
            android:id="@+id/txt_store_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="@android:color/holo_green_dark"
            android:textSize="13sp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Nearest Store Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_nearest_store"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="@string/btn_nearest_store"
                android:textSize="14sp"
                app:icon="@android:drawable/ic_menu_mylocation"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconSize="18dp" />

            <!-- Get Directions Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_get_directions"
                style="@style/Widget.Material3.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_get_directions"
                android:textSize="14sp"
                app:icon="@android:drawable/ic_menu_directions"
                app:iconGravity="textStart"
                app:iconPadding="4dp"
                app:iconSize="18dp" />
        </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</com.google.android.material.card.MaterialCardView>
